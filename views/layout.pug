doctype html
html
  head
    title Blockchain Visualization
    script(src='/jquery/jquery.min.js')
    script(src='/tether/js/tether.min.js')
    script(src='/popper/popper.min.js')
    script(src='/bootstrap/js/bootstrap-material-design.min.js')
    script(src='/three/three.min.js')
    script(src='/socket/socket.io.js')
    script(src='/javascripts/index.js')
    script(src='/javascripts/visualization.js')
    //- script(src='/javascripts/timer.js')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-material-design.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      nav(class='navbar navbar-expand-lg navbar-light bg-light')
        a(class='navbar-brand', href='/') Blockchain Visualization
        button(class='navbar-toggler', type='button', data-toggle='collapse', data-target='#navbarContent', aria-controls='navbarContent', aria-expanded='false', aria-label='Toggle navigation')
          span(class='navbar-toggler-icon')
        div(class='collapse navbar-collapse', id='navbarContent')
          ul(class='navbar-nav ml-auto')
            li(class='nav-item')
              a(class='nav-link', href='/settings') Settings

    div(class='d-flex flex-column main-content')
      block content

    footer(class='navbar-light bg-light')
      div(class='d-flex flex-row align-items-center justify-content-center container')
        span(class='publish-text') Publish a new transaction:
        div(class='publish-text') reward
        input(class='form-control', type='number', id='transactionReward', value='0')
        button(class='btn btn-raised btn-secondary', type='button', onclick='publishTransaction()') Publish
      //- div
      //- button(class='btn btn-primary', type='button') Start
