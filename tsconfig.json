{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "outDir": "src/dist/scripts",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "src/scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "bower_components",
        "**/*.spec.ts"
    ]
}